<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="351dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    >

    <Button
        android:id="@+id/btnFile"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:text="Insert File"
        android:layout_marginTop="80dp"
        android:background="@color/button_dark_purple"
        app:layout_constraintBottom_toTopOf="@+id/btnText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnText"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:text="Insert Text"
        android:background="@color/button_dark_purple"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnFile"/>

    <Button
        android:id="@+id/btnImage"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:text="Insert Image"
        android:background="@color/button_dark_purple"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>