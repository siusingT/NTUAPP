<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileFragment">

    <ImageView
        android:layout_width="700dp"
        android:layout_height="50dp"
        android:src="@drawable/top_bar"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/profile"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/outputUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Username"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSendFriendRequest"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/outputUsername"
        android:text="Send Friend Request"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:backgroundTint="#3F51B5"
        android:layout_marginRight="6dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>


    <Button
        android:id="@+id/btnDeleteFriend"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSendFriendRequest"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:text="delete friend"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#b53f49" />


</RelativeLayout>