<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".social_jio_sports_sessionInfo">


    <ImageView
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/button_template_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/_5_1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/activityInfo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/box"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="300dp"
        android:text="Activity"
        android:textColor="#000"
        android:textSize="35dp"
        android:fontFamily="@font/sf_pro"/>

    <TextView
        android:id="@+id/locationInfo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activityInfo_tv"
        android:layout_alignStart="@+id/box"
        android:layout_marginStart="35dp"
        android:layout_marginTop="3dp"
        android:text="Location"
        android:textSize="18dp"
        android:fontFamily="@font/sf_pro"/>

    <TextView
        android:id="@+id/timeInfo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationInfo_tv"
        android:layout_alignStart="@+id/box"
        android:layout_marginStart="35dp"
        android:layout_marginTop="3dp"
        android:text="Timing"
        android:textSize="25dp"
        android:fontFamily="@font/sf_pro"/>


    <TextView
        android:id="@+id/CurrPax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeInfo_tv"
        android:layout_alignStart="@+id/box"
        android:layout_marginStart="253dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/sf_pro"
        android:text="0"
        android:textColor="#CC312E"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeInfo_tv"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@id/CurrPax"
        android:text="/"
        android:textSize="35dp"
        android:textStyle="bold"
        android:fontFamily="@font/sf_pro"/>

    <TextView
        android:id="@+id/MaxPax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeInfo_tv"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@id/divider"
        android:fontFamily="@font/sf_pro"
        android:text="11"
        android:textSize="35dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chatSession_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/box"
        android:layout_alignBottom="@+id/box"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="191dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_template_blue"
        android:backgroundTint="@color/button_selected"
        android:padding="17dp"
        android:text="Chat"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/back_sports"
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="342dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/go_back"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/joinSession_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/box"
        android:layout_alignEnd="@+id/box"
        android:layout_alignBottom="@+id/box"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="195dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_template_blue"
        android:backgroundTint="#FF7171"
        android:padding="17dp"
        android:text="Join"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="20sp" />


</RelativeLayout>