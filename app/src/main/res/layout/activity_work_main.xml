<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background_blue"
    android:backgroundTint="@color/Background_blue"
    tools:context=".work_main">

    <ImageView
        android:id="@+id/work_image"
        android:layout_width="0dp"
        android:layout_height="285dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/saly_16" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/facilities_white" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="63dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/sf_pro"
        android:text="Work Station"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="672dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_17" />

    <Button
        android:id="@+id/modules"
        android:fontFamily="@font/sf_pro"
        android:text="Modules"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_width="170dp"
        android:layout_height="145dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/button_template"
        app:backgroundTint="@color/button_dark_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/timetable"
        android:fontFamily="@font/sf_pro"
        android:text="Timetable"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_width="170dp"
        android:layout_height="145dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_template"
        app:backgroundTint="@color/button_light_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/links"
        android:fontFamily="@font/sf_pro"
        android:text="Links"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_width="170dp"
        android:layout_height="145dp"
        android:layout_marginTop="515dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/button_template"
        app:backgroundTint="@color/button_dark_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="65dp"
        android:layout_height="52dp"
        android:layout_marginBottom="4dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/home"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/booking"
        android:layout_width="65dp"
        android:layout_height="52dp"
        android:layout_marginBottom="4dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/booking2"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.364"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/current_community"
        android:layout_width="65dp"
        android:layout_height="58dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="4dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/communities"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/booking" />

    <Button
        android:id="@+id/chat_button"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/chat_button"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toEndOf="@+id/current_community" />

</androidx.constraintlayout.widget.ConstraintLayout>